<resources>
    <!-- Base application theme. -->
    <style name="Theme.VoxBox" parent="Theme.TransparentStatus">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_pressed</item>
        <item name="colorSecondaryVariant">@color/fourthly</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/error</item>
        <item name="android:screenOrientation">userPortrait</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>
</resources>